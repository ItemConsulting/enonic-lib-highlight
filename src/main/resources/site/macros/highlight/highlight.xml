<macro>
  <display-name>Code Highlighting</display-name>
  <description>Code highlighting will be applied to code wrapped inside this macro.</description>

  <form>
    <input name="language" type="CustomSelector">
      <label>Language</label>
      <occurrences minimum="1" maximum="1"/>
      <default>javascript</default>
      <config>
        <service>languages</service>
      </config>
    </input>
  </form>
</macro>
